{
  "name": "inventory-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup-env.js",
    "seed": "node scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/(components|utils|lib)",
    "test:integration": "jest --testPathPattern=__tests__/api",
    "test:edge-cases": "jest --testPathPattern=__tests__/(.*edge-cases|.*comprehensive)",
    "test:permissions": "jest --testPathPattern=__tests__/lib/permissions",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "jest --testPathPattern=__tests__/performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:report": "node scripts/generate-test-report.js",
    "audit:check": "npm audit --audit-level=moderate",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "deploy:preview": "echo 'Deploying to preview environment...'"
  },
  "dependencies": {
    "@headlessui/react": "2.2.7",
    "@heroicons/react": "2.2.0",
    "@tailwindcss/forms": "0.5.10",
    "@tanstack/react-query": "5.87.1",
    "@types/bcryptjs": "3.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/multer": "2.0.0",
    "@types/node": "24.3.1",
    "@types/nodemailer": "7.0.1",
    "@types/pdfkit": "0.17.3",
    "@types/qrcode": "1.5.5",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "bcryptjs": "3.0.2",
    "clsx": "2.1.1",
    "cookies-next": "6.1.0",
    "date-fns": "4.1.0",
    "dotenv": "^17.2.2",
    "framer-motion": "12.23.12",
    "iconv-lite": "^0.7.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.19.0",
    "mongoose": "8.18.1",
    "multer": "2.0.2",
    "next": "15.5.2",
    "nodemailer": "7.0.6",
    "pdfkit": "0.17.2",
    "qr-code-styling": "1.9.2",
    "qrcode": "1.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-dropzone": "14.3.8",
    "react-hook-form": "7.62.0",
    "react-hot-toast": "2.6.0",
    "react-intersection-observer": "9.16.0",
    "react-speech-recognition": "4.0.1",
    "react-use": "17.6.0",
    "recharts": "3.2.0",
    "regenerator-runtime": "^0.14.1",
    "sharp": "0.34.3",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "tailwind-merge": "3.3.1",
    "typescript": "5.9.2",
