{
  "name": "inventory-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup-env.js",
    "seed": "node scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/(components|utils|lib)",
    "test:integration": "jest --testPathPattern=__tests__/api",
    "test:edge-cases": "jest --testPathPattern=__tests__/(.*edge-cases|.*comprehensive)",
    "test:permissions": "jest --testPathPattern=__tests__/lib/permissions",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "jest --testPathPattern=__tests__/performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:report": "node scripts/generate-test-report.js",
    "audit:check": "npm audit --audit-level=moderate",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "deploy:preview": "echo 'Deploying to preview environment...'"
  },
  "dependencies": {
    "@headlessui/react": "1.7.17",
    "@heroicons/react": "2.0.18",
    "@tailwindcss/forms": "0.5.7",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.5",
    "@types/multer": "1.4.11",
    "@types/node": "20.10.5",
    "@types/nodemailer": "6.4.14",
    "@types/pdfkit": "0.12.12",
    "@types/qrcode": "1.5.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.16",
    "bcryptjs": "2.4.3",
    "clsx": "2.0.0",
    "cookies-next": "4.1.1",
    "date-fns": "2.30.0",
    "dotenv": "^17.2.2",
    "framer-motion": "10.16.16",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.3.0",
    "mongoose": "8.0.3",
    "multer": "1.4.5-lts.1",
    "next": "14.0.4",
    "nodemailer": "6.9.7",
    "pdfkit": "0.14.0",
    "postcss": "8.4.32",
    "qr-code-styling": "1.6.0",
    "qrcode": "1.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "14.2.3",
    "react-hook-form": "7.48.2",
    "react-hot-toast": "2.4.1",
    "react-intersection-observer": "9.5.3",
    "react-query": "3.39.3",
    "react-speech-recognition": "3.10.0",
    "react-use": "17.4.2",
    "recharts": "2.8.0",
    "regenerator-runtime": "^0.14.1",
    "sharp": "0.33.1",
    "socket.io": "4.7.4",
    "socket.io-client": "4.7.4",
    "tailwind-merge": "2.2.0",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react-speech-recognition": "^3.9.6",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "codecov": "^3.8.3",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.55.0"
  }
}
